# SMTP over SSL (recommended port 465)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=465

# Auth
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password_or_app_password

# Envelope/From
SMTP_FROM=organizer@example.com
SMTP_FROM_NAME=Secret Santa Organizer

# Super secret mode: when true/1/yes results are NOT shown, emails are sent immediately
SuperSecret=false
